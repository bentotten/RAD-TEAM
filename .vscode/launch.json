  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build Docs",
      "type": "bashdb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build_docs.sh",
      "args": []
    },
    {
      "name": "RAD-A2C",
      "type": "python",
      //"python": "${command:python.interpreterPath}/../multi_ppo_torch", # Specify which interpreter
      "request": "launch",
      "program": "${workspaceFolder}/algos/ppo/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["--debug", "True", "--epochs", "25", "--render", "True"],
      "cwd": "${workspaceFolder}/algos/ppo"
    },
    {
      "name": "PLOT MULTI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/algos/multiagent/plot_results.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["--data_dir", "${workspaceFolder}/models", "--smooth", "10"],
      "cwd": "${workspaceFolder}/algos/multiagent"
    },
    {
      "name": "Eval MULTI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/algos/multiagent/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--mode",
        "evaluate",
        "--exp-name",
        "RAD-TEAM",
        "--obstruct",
        "0",
        "--agent-count",
        "2",
        "--net-type",
        "rnn",
        // "--seed",
        // "2",
        "--no-enforce-boundaries",
        "--no-global-critic"
        // "--render",
        // "True",
        // "--save-gif-freq",
        // "20"
      ],
      "cwd": "${workspaceFolder}/algos/multiagent"
    },
    {
      "name": "Train MULTI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/algos/multiagent/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--agent-count",
        "1",
        "--steps-per-epoch",
        "480",
        "--steps-per-episode",
        "120",
        "--epochs",
        "2",
        // "--render",
        // "True",
        // "--save-gif-freq",
        // "10",
        "--obstruct",
        "0",
        "--seed",
        "30176",
        // "--exp-name",
        // "TEAM-RAD",
        "--net-type",
        "cnn"
        // "--no-enforce-boundaries"
        // "--DEBUG",
        // "True",
        // "--save-freq",
        // "25",
        //"--no-global-critic",
        // "--dims",
        // "1200",
        // "1200",
        // "--area-obs",
        // "0.0",
        // "0.0"
      ],
      "cwd": "${workspaceFolder}/algos/multiagent"
    },
    {
      "name": "Test CNN Stage 1 - Test 1",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/integration_tests/CNN/test1/ppo.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      // "args": ["--agents", "2"],

      "cwd": "${workspaceFolder}/integration_tests/CNN/test1"
    },    
    {
      "name": "Test RADMARL Stage 1 - Test 1",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/integration_tests/RADMARL/test1/ppo.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      // "args": ["--agents", "2"],

      "cwd": "${workspaceFolder}/integration_tests/RADMARL/test1"
    },
    {
      "name": "Test RADTEAM Stage 1 - Test 1",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/integration_tests/RADTEAM/test1/ppo.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["--agents", "2", "--mode", "collaborative"],

      "cwd": "${workspaceFolder}/integration_tests/RADTEAM/test1"
    }    
  ]
}
